{
   "name": "assets",
   "$schema": "../../node_modules/nx/schemas/project-schema.json",
   "sourceRoot": "libs/assets/src",
   "prefix": "lib",
   "tags": [],
   "projectType": "library",
   "targets": {
      "test": {
         "executor": "@nx/jest:jest",
         "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
         "options": {
            "jestConfig": "libs/assets/jest.config.ts",
            "passWithNoTests": true
         },
         "configurations": {
            "ci": {
               "ci": true,
               "codeCoverage": true
            }
         }
      },
      "lint": {
         "executor": "@nx/linter:eslint",
         "outputs": ["{options.outputFile}"],
         "options": {
            "lintFilePatterns": ["libs/assets/**/*.ts", "libs/assets/**/*.html"]
         }
      }
   },
   "assets": [
      "../assets/src/lib/assets/main.scss",
      "../assets/src/lib/assets/images",
      "../assets/src/lib/assets/icons",
      "../assets/src/lib/assets/data"
    ]
}
